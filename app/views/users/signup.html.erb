<div class="single-form-container">
  <%= form_for @user do |f| %>
      <div class="boxed-group">
        <div class="landing"><h1>注册</h1></div>
        <div class="boxed-group-inner">
          <dl class="form">
            <dt><%= f.label :name %></dt>
            <dd><%= f.text_field :name %></dd>
          </dl>
          <dl class="form">
            <dt> <%= f.label :student_num %></dt>
            <dd> <%= f.text_field :student_num %> </dd>
          </dl>
          <dl class="form">
            <dt> <%= f.label :password %> </dt>
            <dd> <%= f.password_field :password %> </dd>
          </dl>
          <dl class="form">
            <dt> <%= f.label :password_confirmation %> </dt>
            <dd> <%= f.password_field :password_confirmation %> </dd>
          </dl>
          <dl class="form">
            <dt> <%= f.label :role %> </dt>
            <dd><%= f.select :role ,['学生','老师'] %></dd>
          </dl>
          <p class="landing_bnt"><%= f.submit "注册", :class => "button primary" %></p>
        </div>
      </div>
  <% end %>
</div>