<div class="landing"><h1>已设课题</h1></div>
<table class="topic">
  <tr>
    <th id="a">
      题目
    </th>
    <th id="b">需求</th>
    <th id="c">老师</th>
    <th id="d">选题人</th>
  </tr>
  <%- @all_title.each do |p| %>
      <tr>
        <td>    <%= p.title %></td>
        <td><%= p.demand %></td>
        <td><%= User.find_by_id(p.teacher.to_i).name %></td>
        <% if (p.user_id != nil) %>
            <td><%=  p.user.name %></td>
        <% else %>
            <td><%= link_to '选题', choice_title_path(:id=>p.id) %></td>
        <% end %>
      </tr>

  <% end %>
</table>
